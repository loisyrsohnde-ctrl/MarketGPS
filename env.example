# ============================================================================
# MarketGPS Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# ============================================================================

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (public, safe to use in frontend)
SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (SECRET! Only for backend)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# STRIPE CONFIGURATION
# Get these from: https://dashboard.stripe.com/apikeys
# ============================================================================

# Stripe Secret Key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=sk_test_your_key

# Stripe Webhook Secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# Stripe Price IDs
STRIPE_PRICE_MONTHLY_ID=price_your_monthly_price_id
STRIPE_PRICE_YEARLY_ID=price_your_yearly_price_id

# ============================================================================
# APPLICATION URLS
# ============================================================================

APP_BASE_URL=http://localhost:8501
BACKEND_API_BASE_URL=http://localhost:8000
FRONTEND_SUCCESS_URL=http://localhost:8501/billing?success=1
FRONTEND_CANCEL_URL=http://localhost:8501/billing?canceled=1

# ============================================================================
# OPTIONAL
# ============================================================================

PORT=8000
DEBUG=true
LOG_LEVEL=INFO
