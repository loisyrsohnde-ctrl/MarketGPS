# ============================================================================
# MarketGPS Backend Environment Variables
# Copy this file to .env and fill in the values
# ============================================================================

# ============================================================================
# SUPABASE (Required)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJxxx...
SUPABASE_SERVICE_ROLE_KEY=eyJxxx...
SUPABASE_JWT_SECRET=your-jwt-secret

# ============================================================================
# STRIPE BILLING (Required for subscriptions)
# ============================================================================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxx...

# Get from https://dashboard.stripe.com/webhooks (after creating endpoint)
STRIPE_WEBHOOK_SECRET=whsec_xxx...

# Get from https://dashboard.stripe.com/products (after creating prices)
STRIPE_PRICE_ID_MONTHLY=price_xxx...
STRIPE_PRICE_ID_ANNUAL=price_xxx...

# Frontend URL for Stripe Checkout redirects
FRONTEND_URL=https://app.marketgps.online

# Grace period for past_due subscriptions (hours)
BILLING_GRACE_PERIOD_HOURS=48

# ============================================================================
# DATA PROVIDERS
# ============================================================================
# EODHD API Key (for stocks, ETFs, FX worldwide)
EODHD_API_KEY=your-eodhd-key

# ============================================================================
# AI / LLM PROVIDERS (Optional)
# ============================================================================
# OpenAI API Key (for news article rewriting)
OPENAI_API_KEY=sk-xxx...

# ============================================================================
# CORS (Optional)
# ============================================================================
# Additional allowed origins (comma-separated)
CORS_ORIGINS=

# ============================================================================
# MISC
# ============================================================================
# Port for local development
PORT=8000
